  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Quart",
      "type": "python",
      "request": "launch",
      "module": "quart",
      "env": {
        "QUART_APP": "${workspaceRoot}/my_app/manage.py",
        "QUART_DEBUG": "1"
      },
      "args": [
        "run",
        "--host",
        "0.0.0.0",
        "--port",
        "5002"
      ],
      "jinja": true
    }
  ]
}
